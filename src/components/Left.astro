---
import NewberryLogo from './NewberryLogo.astro'
---

<div class="left">
  <NewberryLogo />
  <slot name="title" />
  <slot name="left-text" />
  <footer>
    <a href="https://www.newberry.org/contact-librarian" target="_blank">Contact Us</a>
  </footer>
</div>
<style>

.left {
  background-color: rgb(var(--bg-color-1));
  color: rgb(var(--fg-color-1));
  top: 0;
  right: 0;
  left: 0;
  display: flex;
  max-height: 100%;
}
:global(.left-text){
  overflow: auto;
  font-size: 1.125rem;
}
.left footer {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  height: 24px;
  background-color: rgba(var(--fg-color-1), 0.77);
  display: flex;
  align-items: center;
  justify-content: center;
  transition: 250ms;
}
.left footer:hover {
  background-color: rgba(var(--fg-color-2), 1);
}
.left footer a {
  padding: 0 8px;
  font-family: 'styrene';
  font-size: 14px;
  line-height: 14px;
  color: rgb(var(--bg-color-1));
}

:global(.left h1) {
  padding: 56px 0 0 0;
  margin: 0;

}
/* sm */
@media screen and (max-width: 767px) {
  .left {
    flex-direction: column;
    justify-content: flex-end;
    align-items: start;
  }
}

/* med */
@media screen and (max-width: 1023px){
  .left {
    flex: 0;
    height: auto;
    position: relative;
    padding: 16px 16px 32px 16px;
  }
  /* :global(.left h1){ */
  /*   padding-top: 46px; */
  /* } */
}
@media screen and (min-width: 768px) and (max-width: 1023px){
  .left {
    flex-direction: row;
    justify-content: flex-end;
    align-items: end;
    gap: 16px;
  }
  /* :global(.left h1){ */
  /*   padding-top: 46px; */
  /* } */
}

/* lg */
@media screen and (min-width: 1024px){
  .left {
    height: 100vh;
    /* height: 100%; */
    flex-direction: column;
    position: sticky;
    padding: 16px 16px 24px 16px;
    flex: 1 1 0%;
    justify-content: flex-end;
    align-items: start;
  }
}
</style>
