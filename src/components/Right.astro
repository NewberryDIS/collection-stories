---
import Background from './Background.astro'
import Arrow from './Arrow.astro'
import SourceButton from '../components/SourceButton.astro'
import { sourceButtonData } from '../stores/'
import type {  Holiday } from '../stores/types'
interface Props {
  holiday?: Holiday;
}
const { holiday } = Astro.props;
---

<div class={`right ${holiday ?? ""}`}>
{ holiday && <Background holiday={holiday} /> }
  <div class="right-liner">
    { holiday && <> <SourceButton data={sourceButtonData[holiday]} /> <Arrow /> </> }
    <div class="card-wrapper" >
      <slot />
    </div>
  </div>
</div>

<style>
.right {
  background: rgb(var(--bg-color-2));
  position: relative;
  flex: 3;
  padding: 0;
  overflow: visible;
  display: grid;
  align-self: stretch;
  /* height: auto; */
}
.card-wrapper {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  position: relative;
  gap: 20px;
  padding-bottom: 77vh;
}
.right:not(.halloween, .winter) {
  padding-top: 7vh;
}
</style>
